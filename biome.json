{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "root": true,
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.git",
      "!**/.DS_Store",
      "!**/dist",
      "!**/cache",
      "!**/package.json",
      "!**/lerna.json",
      "!**/coverage"
    ]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "complexity": {
        "noBannedTypes": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "html": {
    "experimentalFullSupportEnabled": true,
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    }
  },
  "overrides": [
    {
      "includes": ["./playground/src/*.json"],
      "json": {
        "parser": {
          "allowComments": true,
          "allowTrailingCommas": true
        }
      }
    },
    {
      "includes": ["./playground/src/**/*.vue"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    }
  ]
}
